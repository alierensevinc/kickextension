{
  "manifest_version": 3,
  "name": "Kick WatchList",
  "version": "1.0",
  "description": "A Chrome Extension to track your streams on Kick",
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}